pipeline {
    agent any
    
    stages {
        stage('Clone repository') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/main']],
                          userRemoteConfigs: [[url: 'https://github.com/neha230303/jenkins/']]])
            }
        }
        
        stage('Build') {
            steps {
                // Assuming main.cpp is in the same folder as Jenkinsfile
                sh 'g++ main.cpp -o output'
            }
        }
        
        stage('Test') {
            steps {
                sh './output'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'deploy'
                // Add deployment steps if needed
            }
        }
    }
    
    post {
        failure {
            error 'Pipeline failed'
        }
    }
}

